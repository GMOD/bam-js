{
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "plugins": [
    "prettier"
  ],
  "globals": {
    "window": true,
    "__webpack_require__": true
  },
  "env": {
    "mocha": true
  },
  "rules": {
    "no-underscore-dangle": 0,
    "no-bitwise": 0,
    "no-await-in-loop": "warn",
    "no-param-reassign": "warn",
    "no-loop-func": "warn",
    "prefer-arrow-callback": "warn",
    "prefer-destructuring": "warn",
    "prefer-const": "warn",
    "class-methods-use-this": 0,
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "semi": false,
        "trailingComma": "all"
      }
    ]
  }
}

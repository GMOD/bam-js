{
  "name": "@gmod/bam",
  "version": "1.1.14",
  "description": "Parser for BAM and BAM index (bai) files",
  "license": "MIT",
  "repository": "GMOD/bam-js",
  "main": "dist/index.js",
  "module": "esm/index.js",
  "author": {
    "name": "Colin Diesh",
    "email": "colin.diesh@gmail.com",
    "url": "https://github.com/cmdcolin"
  },
  "engines": {
    "node": ">=6"
  },
  "files": [
    "dist",
    "esm"
  ],
  "scripts": {
    "test": "jest",
    "coverage": "npm test -- --coverage",
    "lint": "eslint --report-unused-disable-directives --max-warnings 0 --ext .js,.ts src test",
    "clean": "rimraf dist esm",
    "build:esm": "tsc --target es2018 --outDir esm",
    "build:es5": "tsc --target es5 --outDir dist",
    "build": "npm run build:esm && npm run build:es5",
    "prebuild": "npm run clean && npm run lint",
    "preversion": "npm run lint && npm test && npm run build",
    "version": "standard-changelog && git add CHANGELOG.md",
    "postversion": "git push --follow-tags"
  },
  "keywords": [
    "bionode",
    "biojs",
    "bam",
    "genomics"
  ],
  "dependencies": {
    "@gmod/bgzf-filehandle": "^1.3.3",
    "buffer-crc32": "^0.2.13",
    "cross-fetch": "^3.0.2",
    "generic-filehandle": "^2.0.0",
    "long": "^4.0.0",
    "object.entries-ponyfill": "^1.0.1"
  },
  "devDependencies": {
    "@types/buffer-crc32": "^0.2.0",
    "@types/jest": "^27.4.1",
    "@types/long": "^4.0.0",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "standard-changelog": "^2.0.27",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5"
  },
  "publishConfig": {
    "access": "public"
  }
}

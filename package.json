{
  "name": "@gmod/bam",
  "version": "1.1.18",
  "description": "Parser for BAM and BAM index (bai) files",
  "license": "MIT",
  "repository": "GMOD/bam-js",
  "main": "dist/index.js",
  "module": "esm/index.js",
  "author": {
    "name": "Colin Diesh",
    "email": "colin.diesh@gmail.com",
    "url": "https://github.com/cmdcolin"
  },
  "engines": {
    "node": ">=6"
  },
  "files": [
    "dist",
    "esm",
    "src"
  ],
  "scripts": {
    "test": "jest",
    "coverage": "npm test -- --coverage",
    "lint": "eslint --report-unused-disable-directives --max-warnings 0 --ext .js,.ts src test",
    "clean": "rimraf dist esm",
    "build:esm": "tsc --target es2018 --outDir esm",
    "build:es5": "tsc --target es2015 --module commonjs --outDir dist",
    "build": "npm run build:esm && npm run build:es5",
    "prebuild": "npm run clean && npm run lint",
    "preversion": "npm run lint && npm test && npm run build",
    "version": "standard-changelog && git add CHANGELOG.md",
    "postversion": "git push --follow-tags"
  },
  "keywords": [
    "bionode",
    "biojs",
    "bam",
    "genomics"
  ],
  "dependencies": {
    "@gmod/bgzf-filehandle": "^1.4.4",
    "abortable-promise-cache": "^1.5.0",
    "buffer-crc32": "^0.2.13",
    "cross-fetch": "^3.0.2",
    "generic-filehandle": "^3.0.0",
    "long": "^4.0.0",
    "object.entries-ponyfill": "^1.0.1",
    "quick-lru": "^2.0.0"
  },
  "devDependencies": {
    "@types/buffer-crc32": "^0.2.2",
    "@types/jest": "^29.5.0",
    "@types/long": "^4.0.0",
    "@types/node": "^18.15.3",
    "@types/quick-lru": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "prettier": "^2.8.4",
    "rimraf": "^4.4.0",
    "standard-changelog": "^2.0.27",
    "ts-jest": "^29.0.5",
    "typescript": "^5.0.2"
  },
  "publishConfig": {
    "access": "public"
  }
}

{
  "name": "@gmod/bam",
  "version": "1.0.28",
  "description": "Parser for BAM and BAM index (bai) files",
  "license": "MIT",
  "repository": "GMOD/bam-js",
  "main": "dist/index.js",
  "author": {
    "name": "Colin Diesh",
    "email": "colin.diesh@gmail.com",
    "url": "https://github.com/cmdcolin"
  },
  "engines": {
    "node": ">=6"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "jest",
    "coverage": "npm test -- --coverage",
    "lint": "eslint --report-unused-disable-directives --max-warnings 0 --ext .js,.ts src",
